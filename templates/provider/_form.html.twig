
   
 <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Create new Provider</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form) }}
                <div class="card-body">
                  <div class="form-group">
                    <label for="providername">Provider Name</label>
                    {{ form_widget(form.name,{'attr': {'class': 'form-control','placeholder': 'Provider Name','id': 'providername'}}) }}
                   
                  </div>
                  <div class="form-group">
                    <label for="provideradress">Provider Adress</label>
                     {{ form_widget(form.adress,{'attr': {'class': 'form-control','placeholder': 'Provider Adress','id': 'provideradress'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="providemail">Provider Email</label>
                    {{ form_widget(form.email,{'attr': {'class': 'form-control','placeholder': 'Provider Email','id': 'providemail'}}) }}
                  </div>

                   <div class="form-group">
                    <label for="providercode">Provider Code</label>
                   {{ form_widget(form.code,{'attr': {'class': 'form-control','placeholder': 'Provider Adress','id': 'providercode'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputFile">Provider Logo</label>
                    <div class="input-group">
                      <div class="custom-file">
                        {{ form_widget(form.photo,{'attr': {'class': 'custom-file-input','id': 'InputFile'}}) }}
                        <label class="custom-file-label" for="InputFile">Choose file</label>
                      </div>
                    </div>
                  </div>
              
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-success" class="btn btn-primary">Submit</button>
                </div>
              {{ form_end(form) }}
            </div>
            <!-- /.card -->


      
          <!--/.col (left) -->
