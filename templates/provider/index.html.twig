{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Provider index{% endblock %}

   {% block fils %}
{{parent()}}

    <a class="btn btn-primary" href="{{ path('provider_new') }}" style="margin-bottom:15px">Create new</a>


         <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des Provider</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Adress</th>
                    <th>Email</th>
                    <th>Photo</th>
                    <th>Code</th>
                    <th>Actions</th>
                  </tr>
                  </thead>

                  <tbody>
                  {% for provider in providers %}
            <tr>
                <td>{{ provider.id }}</td>
                <td>{{ provider.name }}</td>
                <td>{{ provider.adress }}</td>
                <td>{{ provider.email }}</td>
                <td><img src="{{asset('uploads/providers/'~ provider.photo )}}" width="100" height="100"/></td>

            
                <td>{{ provider.code }}</td>
                <td>
                    <a href="{{ path('provider_show', {'id': provider.id}) }}">show</a>
                    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>
                </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                  <tr>
                     <th>Id</th>
                    <th>Name</th>
                    <th>Adress</th>
                    <th>Email</th>
                    <th>Photo</th>
                    <th>Code</th>
                    <th>Actions</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->


{% endblock %}

